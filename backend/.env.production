# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=warn
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30d

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=10
OTP_MAX_ATTEMPTS=3
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_SESSION_SECRET
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_TIMEOUT=30000
DB_SSL=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Add monitoring service keys if using services like Sentry, LogRocket, etc.
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_KEY=your-analytics-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false
ENABLE_METRICS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration if using cache
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# IMPORTANT: Change admin credentials for production
ADMIN_EMAIL=admin@kixikila.com
ADMIN_PASSWORD=CHANGE_TO_STRONG_ADMIN_PASSWORD
ADMIN_NAME=KIXIKILA Admin

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# =============================================================================
# SCHEDULED TASKS CONFIGURATION
# =============================================================================
SCHEDULED_TASKS_ENABLED=true
CRON_CLEANUP_LOGS=0 2 * * *
CRON_PROCESS_NOTIFICATIONS=*/5 * * * *
CRON_BACKUP_DATA=0 3 * * 0

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=CHANGE_TO_STRONG_WEBHOOK_SECRET