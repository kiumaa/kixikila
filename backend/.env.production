# KIXIKILA Backend - Production Environment Variables
# Copy this file and rename to .env for production deployment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Add your production frontend URL here
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a strong secret key for production
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# Use your live Stripe keys for production
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# BULKSMS CONFIGURATION
# =============================================================================
# Your BulkSMS production credentials
BULKSMS_API_URL=https://api.bulksms.com/v1
BULKSMS_USERNAME=your-bulksms-username
BULKSMS_PASSWORD=your-bulksms-password
BULKSMS_API_KEY=your-bulksms-api-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP configuration for production emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@kixikila.com
EMAIL_FROM_NAME=KIXIKILA

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# SECURITY
# =============================================================================
# Set to true in production
SECURE_COOKIES=true
SAME_SITE_COOKIES=strict

# =============================================================================
# DATABASE
# =============================================================================
# Additional database configuration if needed
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Add monitoring service keys if using services like Sentry, LogRocket, etc.
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_KEY=your-analytics-key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false
ENABLE_METRICS=true

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis configuration if using cache
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# FILE UPLOAD
# =============================================================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Webhook secrets for external services
WEBHOOK_SECRET=your-webhook-secret-key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup service configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30