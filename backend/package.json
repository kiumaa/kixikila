{
  "name": "kixikila-backend",
  "version": "1.0.0",
  "description": "Backend API for KIXIKILA collaborative savings platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:setup": "tsx src/scripts/setupDatabase.ts setup",
    "db:reset": "tsx src/scripts/setupDatabase.ts reset",
    "db:verify": "tsx src/scripts/setupDatabase.ts verify",
    "db:config": "tsx src/scripts/setupDatabase.ts config",
    "db:admin": "tsx src/scripts/setupDatabase.ts admin",
    "db:drop": "tsx src/scripts/setupDatabase.ts drop",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "health": "tsx src/scripts/healthCheck.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.9.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "node-cron": "^3.0.3",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "validator": "^13.11.0",
    "sanitize-html": "^2.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/node-cron": "^3.0.11",
    "@types/speakeasy": "^2.0.10",
    "@types/qrcode": "^1.5.5",
    "@types/validator": "^13.11.7",
    "@types/sanitize-html": "^2.9.5",
    "@types/lodash": "^4.14.202",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "kixikila",
    "collaborative-savings",
    "fintech",
    "api",
    "nodejs",
    "express",
    "supabase",
    "stripe"
  ],
  "author": "KIXIKILA Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kixikila/backend.git"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}