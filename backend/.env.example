# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:8080
CORS_CREDENTIALS=true

# JWT Configuration - MUST BE STRONG 32+ CHARACTER SECRET
JWT_SECRET=GENERATE_SECURE_32_CHAR_SECRET_HERE
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Supabase Configuration - REPLACE WITH YOUR PROJECT VALUES
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# BulkSMS Configuration
BULKSMS_API_KEY=your-bulksms-api-key
BULKSMS_API_SECRET=your-bulksms-api-secret
BULKSMS_BASE_URL=https://api.bulksms.com/v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security - CRITICAL: USE STRONG SECRETS IN PRODUCTION
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=GENERATE_SECURE_32_CHAR_SECRET_HERE

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[password]@db.hkesrohuaurcyonpktyt.supabase.co:5432/postgres

# Admin Configuration - SECURITY: GENERATE STRONG RANDOM PASSWORD
ADMIN_EMAIL=admin@kixikila.pt
ADMIN_PASSWORD=GENERATE_STRONG_16_CHAR_PASSWORD_WITH_SYMBOLS

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# Notification Configuration
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3

# Cron Jobs
CRON_PAYMENT_REMINDERS=0 9 * * *
CRON_GROUP_DRAWS=0 12 * * 1
CRON_CLEANUP_LOGS=0 2 * * 0